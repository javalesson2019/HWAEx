<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>addToDB</servlet-name>
    <servlet-class>org.itstep.HomeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>showDBFilms</servlet-name>
    <servlet-class>org.itstep.HomeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>search</servlet-name>
    <servlet-class>org.itstep.SearchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>search</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>addToDB</servlet-name>
    <url-pattern>/addToDBFilms</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>showDBFilms</servlet-name>
    <url-pattern>/showDBFilms</url-pattern>
  </servlet-mapping>

</web-app>
