<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
   <servlet>
     <servlet-name>addCookie</servlet-name>
     <servlet-class>org.itstep.CreateCookieServlet</servlet-class>
   </servlet>
    <servlet>
        <servlet-name>editCookie</servlet-name>
        <servlet-class>org.itstep.EditCookiesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteCookie</servlet-name>
        <servlet-class>org.itstep.DeleteCookieServlet</servlet-class>
    </servlet>
  <servlet-mapping>
    <servlet-name>addCookie</servlet-name>
    <url-pattern>/addCookie</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editCookie</servlet-name>
        <url-pattern>/editCookie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteCookie</servlet-name>
        <url-pattern>/deleteCookie</url-pattern>
    </servlet-mapping>
</web-app>
